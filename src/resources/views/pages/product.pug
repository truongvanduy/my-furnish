extends ../layout/layout

block vars
  -title = 'MyFurnish | Products'

block css 
  link(rel="stylesheet", href="../css/style.css")
  link(rel="stylesheet", href="../css/product.css")

block container 
  +mainHeader("Products")
  .page_sort_by.container
    h3 Ecommerce Acceories & Fashion item 
    .page_sort_bottom
      label(for='perpage') Per Page:
      input#perpage(type='number' name='Per Page' value="1")
      label(for='sort') Sort By:
      select#sort(size='1')
        option Best Match
        option Top Sale
        option Popular
  .grid-container__product.container.grid
    each product in products
      -productSlug = product.slug
      -productImgLink = '/images/products/' + productSlug + '.png'
      +productItem(product.product_name, product.slug, product.price)
      
  .page_change.container
    form(action='#')
      button.bton
        i.fa-solid.fa-angles-left
      button.bton
        i.fa-solid.fa-angle-left
      button.bton
        i.fa-regular.fa-1
      button.bton
        i.fa-regular.fa-2
      button.bton
        i.fa-regular.fa-3
      button.bton
        i.fa-solid.fa-angle-right
      button.bton
        i.fa-solid.fa-angles-right

block scripts 
  script(src="../js/pages/products.js" type="module")