extends ../layout/layout

block vars 
  -title = 'Hekto: Cart'
block css 
  link(rel="stylesheet", href="../css/style.css")
  link(rel="stylesheet", href="../css/cart.css")

block container 
  +mainHeader("Shopping Cart")
  section.cart-main.container
    .layout_left
      table.cart-table
        thead.cart-table__head
          tr.cart-table__row
            th.cart-table__cell
              h4.cart-table__heading.heading.heading-xs Product 
            th.cart-table__cell
              h4.cart-table__heading.heading.heading-xs Price 
            th.cart-table__cell
              h4.cart-table__heading.heading.heading-xs Quantity 
            th.cart-table__cell
              h4.cart-table__heading.heading.heading-xs Total 
            th.cart-table__cell
              h4.cart-table__heading.heading.heading-xs Delete 
        tbody.cart-table__body
          
      .cart-action
        a.cart-action__btn.btn.btn--md.btn--solid.btn--primary.clear-cart-btn Clear Cart
        a.cart-action__btn.btn.btn--md.btn--solid.btn--primary(href='./product.html') Continue Shopping
    section.layout_right
      h1#title-total.heading ORDER SUMMARY
      .Total_abc
        span.Total Quantity:
        span.Total_a.invoice-qty
      .Total_abc
        span.Total_money Subtotal:
        span.Total_b.invoice-total
      #b1.Code_abc
        input#code.code_text(onclick='clearErrorMessage()' type='text' placeholder='Enter discount code (if any)')
      .Total_abc
        span Cart total:
        span.Total_c.invoice-total
      button.button_table_b1.btn.btn--md.btn--primary.btn--solid Checkout

block scripts 
  script(src="../js/app.js")
  script.
    app.startCart();